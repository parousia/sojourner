<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/intro_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/colorAccent">

    <TextView
        android:id="@+id/intro_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="62dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="@string/intro_title"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="50sp"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/intro_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:gravity="center"
        android:maxEms="18"
        android:text="@string/intro_description"
        android:textColor="@color/colorPrimary"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_below="@id/intro_title"/>

    <ImageView
        android:id="@+id/computer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_journey_normal"
        android:layout_below="@id/intro_description"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="62dp"/>

    <Button
        android:id="@+id/intro_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:backgroundTint="@color/light_gray"
        android:gravity="center"
        android:text="@string/intro_button"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>