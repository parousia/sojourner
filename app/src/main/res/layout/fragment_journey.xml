<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/journey_challenge_cardview"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        style="@style/CustomCardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/journey_challenge_title_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="@string/challenge_title"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/journey_challenge_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/journey_challenge_title_textView"
                android:layout_margin="16dp"
                android:layout_marginRight="-8dp"
                android:text="Test Text to see where the challenge goes"/>

            <CheckBox
                android:id="@+id/journey_challenge_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/journey_challenge_textView"
                android:text="@string/checkbox_done"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/journey_story_cardview"
        style="@style/CustomCardView"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginTop="8dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/journey_scene_imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:text="@string/journey_scene_title"
                android:textStyle="bold"/>

        </FrameLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>